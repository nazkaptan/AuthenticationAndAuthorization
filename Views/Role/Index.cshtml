@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Role List</h4>
            </div>
            <div class="card-body">
                <div class="table table-responsive table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Users</th>
                                <th>Edit</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td user-role="@item.Id">@item.Id</td>
                                    <td>
                                        <a asp-action="AssignedUser" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Assigned The User</a>
                                    </td>
                                    <td>
                                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm confirmDeletion">Remove</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-outline-dark btn-block">Create New Role</a>
            </div>
        </div>
    </div>
</div>

